generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AnecdoteCache {
  cacheKey  String   @id @map("cache_key")
  scope     String
  year      Int
  lang      String
  country   String?
  payload   Json
  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")

  @@map("anecdote_cache")
}

model EventCache {
  id        String   @id @default(cuid())
  year      Int
  country   String
  lang      String
  eventQid  String   @map("event_qid")
  title     String
  fact      String
  sourceUrl String   @map("source_url")
  scene     String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([year, country, lang, eventQid])
  @@map("event_cache")
}

model Vote {
  id        String   @id @default(cuid())
  year      Int
  country   String
  lang      String
  eventQid  String   @map("event_qid")
  up        Int      @default(0)
  down      Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([year, country, lang, eventQid])
  @@map("vote")
}

model AppConfig {
  key       String   @id
  value     Json
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("app_config")
}
