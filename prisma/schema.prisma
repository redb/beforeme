generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AnecdoteCache {
  cacheKey  String   @id @map("cache_key")
  scope     String
  year      Int
  lang      String
  country   String?
  payload   Json
  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")

  @@map("anecdote_cache")
}

model EventCache {
  id        String   @id @default(cuid())
  year      Int
  countryQid String  @map("country_qid")
  lang      String
  eventQid  String   @map("event_qid")
  title     String
  fact      String?
  sourceUrl String?  @map("source_url")
  scene     String?
  status    String   @default("pending")
  date      String?
  datePrecision String? @map("date_precision")
  ruptureType String? @map("rupture_type")
  confidence Float?
  placeName String? @map("place_name")
  placeQid String? @map("place_qid")
  placeType String? @map("place_type")
  r2Key String? @map("r2_key")
  schemaVersion String @default("1.0") @map("schema_version")
  promptHash String? @map("prompt_hash")
  sourceUrls Json? @map("source_urls")
  validationFlags Json? @map("validation_flags")
  errorCode String? @map("error_code")
  errorMessage String? @map("error_message")
  lockOwner String? @map("lock_owner")
  lockExpiresAt DateTime? @map("lock_expires_at")
  generatedAt DateTime @default(now()) @map("generated_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([year, countryQid, lang, eventQid])
  @@index([status, updatedAt])
  @@index([lockExpiresAt])
  @@index([countryQid, year, lang])
  @@map("event_cache")
}

model Vote {
  id        String   @id @default(cuid())
  year      Int
  country   String
  lang      String
  eventQid  String   @map("event_qid")
  up        Int      @default(0)
  down      Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([year, country, lang, eventQid])
  @@map("vote")
}

model AppConfig {
  key       String   @id
  value     Json
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("app_config")
}
